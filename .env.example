APP_NAME="Email API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=uniform.de.hostns.io
DB_PORT=3306
DB_DATABASE=email_api
DB_USERNAME=email_api_user
DB_PASSWORD=email@User

# Broadcast, Cache, Filesystem, Queue, Session
BROADCAST_DRIVER=log
CACHE_STORE=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration for cPanel (Default)
# Use sendmail/Exim for cPanel hosting
MAIL_MAILER=sendmail
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Sendmail path (default for cPanel)
MAIL_SENDMAIL_PATH="/usr/sbin/sendmail -bs -i"

# Amazon SES Configuration (Optional - configure per domain in database)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# Redis (Optional - for queue/cache)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# Admin API Key (for managing domains)
# ============================================
# Generate with: php -r "echo 'admin_' . bin2hex(random_bytes(32));"
ADMIN_API_KEY=admin_your_secure_key_here

# Vite (Optional - not needed for API-only)
VITE_APP_NAME="${APP_NAME}"
